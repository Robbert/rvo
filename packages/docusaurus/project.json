{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "root": "{workspaceRoot}/packages/docusaurus",
  "sourceRoot": "{projectRoot}",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "outputs": ["{projectRoot}/build"],
      "options": {
        "command": "npm run build",
        "cwd": "packages/docusaurus",
        "outputPath": "packages/docusaurus/build"
      },
      "dependsOn": ["build"],
      "projects": ["packages/components-css", "proprietary/design-tokens", "proprietary/rijkshuisstijl-design-tokens"]
    },
    "serve": {
      "executor": "@nrwl/web:file-server",
      "options": {
        "buildTarget": "docusaurus:build",
        "port": 8080
      }
    },
    "start": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npm run start",
        "cwd": "packages/docusaurus"
      }
    },
    "docusaurus": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npm run docusaurus",
        "cwd": "packages/docusaurus"
      }
    }
  }
}
