{
  "env": {
    "browser": true,
    "es6": true,
    "node": false
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "settings": {
    "react": {
      "version": "17.0.2"
    }
  },
  "plugins": ["markdown"],
  "overrides": [
    {
      "files": ["**/*.md"],
      "extends": ["plugin:markdown/recommended"],
      "processor": "markdown/markdown"
    },
    {
      "extends": ["plugin:json/recommended"],
      "files": ["*.json"]
    },
    {
      "files": ["*.mdx"],
      "extends": [
        "plugin:mdx/recommended",
        "plugin:react/recommended",
        "eslint-config-prettier",
        "./.eslintrc.js.json",
        "./.eslintrc.react.json",
        "./.eslintrc.mdx.json"
      ],
      "plugins": ["import"]
    },
    {
      "extends": [
        "plugin:react/recommended",
        "eslint-config-prettier",
        "./.eslintrc.js.json",
        "./.eslintrc.react.json"
      ],
      "files": ["*.js", "*.jsx"],
      "plugins": ["import"]
    },
    {
      "extends": [
        "plugin:react/recommended",
        "eslint-config-prettier",
        "./.eslintrc.js.json",
        "./.eslintrc.react.json"
      ],
      "files": ["*.ts", "*.tsx"],
      "parser": "@typescript-eslint/parser",
      "parserOptions": {
        "project": [
          "components/tsconfig.json",
          "documentation/tsconfig.json",
          "uxpin-merge/tsconfig.json",
          "packages/components-react/tsconfig.json",
          "packages/components-react/tsconfig.test.json",
          "packages/docusaurus/tsconfig.json",
          "packages/storybook/tsconfig.json"
        ]
      },
      "plugins": ["@typescript-eslint", "import"],
      "rules": {
        "no-unused-vars": "off",
        "@typescript-eslint/no-unused-vars": "error"
      }
    }
  ]
}
