{
  "env": {
    "browser": true,
    "es6": true,
    "node": false
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "settings": {
    "react": {
      "version": "17.0.2"
    }
  },
  "overrides": [
    {
      "extends": ["plugin:json/recommended"],
      "files": ["*.json"]
    },
    {
      "extends": ["plugin:mdx/recommended", "eslint-config-prettier", "./.eslintrc.js.json", "./.eslintrc.react.json"],
      "files": ["*.mdx"],
      "settings": {
        "mdx/code-blocks": true
      },
      "plugins": ["import"]
    },
    {
      "extends": [
        "plugin:react/recommended",
        "eslint-config-prettier",
        "./.eslintrc.js.json",
        "./.eslintrc.react.json"
      ],
      "files": ["*.js", "*.jsx"],
      "plugins": ["import"]
    },
    {
      "extends": [
        "plugin:react/recommended",
        "eslint-config-prettier",
        "./.eslintrc.js.json",
        "./.eslintrc.react.json"
      ],
      "files": ["components/**/stencil.tsx", "components/**/*.stencil.tsx"],
      "parser": "@typescript-eslint/parser",
      "parserOptions": {
        "project": ["components/tsconfig.json"]
      },
      "plugins": ["@typescript-eslint", "import"]
    },
    {
      "excludedFiles": ["components/**/stencil.tsx", "components/**/*.stencil.tsx"],
      "extends": [
        "plugin:react/recommended",
        "eslint-config-prettier",
        "./.eslintrc.js.json",
        "./.eslintrc.react.json"
      ],
      "files": ["*.ts", "*.tsx"],
      "parser": "@typescript-eslint/parser",
      "parserOptions": {
        "project": [
          "components/tsconfig.json",
          "documentation/tsconfig.json",
          "uxpin-merge/tsconfig.json",
          "packages/components-react/tsconfig.json",
          "packages/components-react/tsconfig.test.json",
          "packages/docusaurus/tsconfig.json",
          "packages/web-components-react/tsconfig.json",
          "packages/web-components-stencil/tsconfig.json",
          "packages/web-components-stencil/tsconfig.stencil.json"
        ]
      },
      "plugins": ["@typescript-eslint", "import"],
      "rules": {
        "no-unused-vars": "off",
        "@typescript-eslint/no-unused-vars": "error"
      }
    }
  ]
}
