{
  "rvo": {
    "textbox": {
      "outline-offset": { "value": "0" },
      "invalid-focus": {
        "border-color": { "value": "{rvo.color.zwart}" },
        "outline-color": { "value": "{rvo.color.rood}" }
      },
      "xs": {
        "width": { "value": "{rvo.space.3xl}" }
      },
      "sm": {
        "width": { "value": "calc({rvo.space.4xl} + {rvo.space.xs})" }
      },
      "md": {
        "width": { "value": "calc({rvo.space.4xl} * 2)" }
      },
      "lg": {
        "width": { "value": "calc({rvo.space.4xl} * 4)" }
      },
      "max": {
        "width": { "value": "100%" }
      }
    }
  }
}
