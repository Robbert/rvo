{
  "version": "1.0.0-alpha.294",
  "author": "Community for NL Design System",
  "description": "RVO design tokens",
  "license": "SEE LICENSE IN LICENSE.md",
  "name": "@nl-rvo/design-tokens",
  "keywords": [
    "nl-design-system",
    "nl-rvo"
  ],
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git+ssh",
    "url": "git@github.com:nl-design-system/rvo.git"
  },
  "scripts": {
    "clean": "rimraf dist/",
    "prebuild": "pnpm run clean",
    "build": "npm-run-all build:**",
    "build:style-dictionary": "style-dictionary build --config ./src/style-dictionary.config.js",
    "build:stylelint": "node ./build-stylelint.mjs",
    "watch": "npm-run-all watch:**",
    "watch:style-dictionary": "chokidar --follow-symlinks --initial --command 'pnpm run build:style-dictionary' './src/**/*.tokens.json'"
  },
  "devDependencies": {
    "chokidar-cli": "3.0.0",
    "glob": "10.3.10",
    "lodash": "4.17.21",
    "npm-run-all": "4.1.5",
    "regex-trie": "1.0.4",
    "rimraf": "5.0.5",
    "style-dictionary": "3.9.0"
  },
  "main": "dist/index.css"
}
